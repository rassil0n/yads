#!/bin/sh

# get memory/swap
mem=$(free -h | awk '$1~/Speicher/{print $3}'| tr -d i)
swap=$(free -h | awk '$1~/Swap/{print $3}')

# create output
if [ "${swap}" = "0" ] || [ "${swap}" = "0B" ] || [ "${swap}" = "0,0Ki" ]; then
		printf "[ ðŸ§ %s ]" $mem
        # echo "[ ðŸ§ ${mem} ]" | tr -d i
else printf "[ ðŸ§ %s || %s ]" $mem $swap; fi
